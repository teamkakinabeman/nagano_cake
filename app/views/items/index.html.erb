<div class='container'>
  <div class='row pt-4'>
    <div class='col-md-12'>
      <h1>商品一覧 </h1>

        <div class='row pt-3 row-eq-height'>
          <% @items.each do |item| %>
            <div class="col-sm-3">
              <div class="img-container">
                <%= link_to item_path(item.id) do %>
                <%= image_tag item.get_item_image, class: "rounded", size: '200x130' %>
                <% end %>
              </div>
              <p class='pt-2 font-weight-bold'>
                <%= item.name %><br>
                ¥ <%= item.add_tax_price.to_s(:delimited) %> (税込)
              </p>
            </div>
          <% end %>
        </div>

        <div class="mt-4">
          <div class="row justify-content-center">
            <%= paginate @items %>
          </div>
        </div>


    </div>
  </div>
</div>