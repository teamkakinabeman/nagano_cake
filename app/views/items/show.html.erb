<div class='container'>
  <div class='row mt-5 pt-5 col-md-12'>
      <div class='col-md-6'>
        <%= image_tag @item.get_item_image, size:'300x220' %>
      </div>
      <div class='col-md-6'>
        <p>商品名：<%= @item.name %></p>
        <p>商品説明文：<%= @item.introduction %></p>
        <p>¥ <%= @item.add_tax_price.to_s(:delimited) %> (税込)</p>
        
        <%= form_with model: CartItem, url: cart_items_path, method: :post do |f| %>
        <%= f.hidden_field :item_id, :value => @item.id %>
        <div class='col-md-7 row flex-nowrap'>
          <%= f.select :amount, *[1..10], { include_blank: '個数選択' }, class: "form-control col-md-2 mb-2", required:"required" %>
        </div>
        <div class='col-3 flex-nowrap'>
          <%= f.submit "カートに入れる"  %>
      </div>
      </div>
     


      <% end %>
  </div>
</div>