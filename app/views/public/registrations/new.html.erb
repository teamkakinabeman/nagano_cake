
<div class="container">
  <div class="row">
    <div class='pt-3 pl-5 ml-5'>
      <h4 class='alart alert-secondary'>新規会員登録</h4>
    </div>
  </div>


<!--form_forだったので訂正（10/20 その）-->
<%#= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<%= form_with model: @customer, url: customer_registration_path do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
  <div class="row mt-5">
    <div class="form-group col-12">
      <%= f.label :"名前", class: "col-sm-2 control-label" %>
      <%= f.label :"(姓)", class: "mr-3" %>
      <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", :placeholder => "令和" %>


      <%= f.label :"(名)", class: "ml-2 mr-3" %>
      <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", :placeholder => "道子" %>
    </div>

    <div class="form-group col-12">
      <%= f.label :"フリガナ", class: "col-sm-2 control-label" %>
      <%= f.label :"(セイ)" %>
      <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name", :placeholder => "レイタ"  %>

      <%= f.label :"(メイ)",class: "ml-2" %>
      <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", :placeholder => "ミチコ" %>
    </div>


    <div class="form-group col-12">
      <%= f.label :"メールアドレス", class: "col-sm-2 control-label mr-5" %>
      <%= f.text_field :email, autofocus: true, autocomplete: "email", :placeholder => "sample@example.com" %>
    </div>

    <div class="form-group col-12 text-nowrap">
      <%= f.label :"郵便番号(ハイフンなし)", class: "col-sm-2 control-label mr-5" %>
      <%= f.text_field :postcode, autofocus: true, autocomplete: "postcode", :placeholder => "0000000" %>
    </div>

    <div class="form-group col-12">
      <%= f.label :"住所", class: "col-sm-2 control-label mr-5" %>
      <%= f.text_field :address, autofocus: true, autocomplete: "address", :placeholder => "東京都渋谷区代々木神園町0-0", class: "col-5" %>
    </div>

    <div class="form-group col-12 text-nowrap">
      <%= f.label :"電話番号(ハイフンなし)",class: "col-sm-2 control-label mr-5" %>
      <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number", :placeholder => "0000000000",class: "col-sm-2 control-label mr-5" %>
    </div>

    <div class="form-group col-12 text-nowrap">
      <%= f.label :"パスワード６文字以上",class: "col-sm-2 control-label mr-5" %>
      <% if @minimum_password_length %>
      <em><% @minimum_password_length %></em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="form-group col-12">
      <%= f.label :"パスワード(確認用)",class: "col-sm-2 control-label mr-5" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
    <div class="actions col-7 text-center">
      <%= f.submit "新規会員登録",class: 'btn btn-sm btn-success control-submit mr-5' %>
    </div>
  </div>
<% end %>

    <div class='row ml-5 mt-5'>
      <h4 class="alert-secondary">既に登録済みの方<h4>
    </div>

    <div class="row">
     <div class="col-4 offset-1">
       <%= link_to "こちら", new_customer_session_path %> からログインしてください。
     </div>
    </div>
