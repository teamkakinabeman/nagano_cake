<h2>新規会員登録</h2>
<!--form_forだったので訂正（10/20 その）-->
<%#= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<%= form_with model: @customer, url: customer_registration_path do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="form-group col-xs-5">
    <%= f.label :"名前", class: "col-sm-2 control-label" %>
    <%= f.label :"(姓)" %>
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", :placeholder => "令和" %>


    <%= f.label :"(名)" %>
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", :placeholder => "道子" %>
  </div>

  <div class="form-group col-xs-5">
    <%= f.label :"フリガナ", class: "col-sm-2 control-label" %>
    <%= f.label :"(セイ)" %>
    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name", :placeholder => "レイタ"  %>

    <%= f.label :"(メイ)" %>
    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", :placeholder => "ミチコ" %>
  </div>


  <div class="form-group row">
    <%= f.label :"メールアドレス", class: "col-sm-3 control-label" %>
    <%= f.text_field :email, autofocus: true, autocomplete: "email", :placeholder => "sample@example.com" %>
  </div>

  <div class="form-group col-xs-5">
    <%= f.label :"郵便番号(ハイフンなし)" %>
    <%= f.text_field :postcode, autofocus: true, autocomplete: "postcode", :placeholder => "0000000" %>
  </div>

  <div class="form-group row">
    <%= f.label :"住所" %>
    <%= f.text_field :address, autofocus: true, autocomplete: "address", :placeholder => "東京都渋谷区代々木神園町0-0" %>
  </div>

  <div class="form-group col-xs-5">
    <%= f.label :"電話番号(ハイフンなし)" %>
    <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number", :placeholder => "0000000000" %>
  </div>

  <div class="form-group col-xs-5">
    <%= f.label :"パスワード" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="form-group row">
    <%= f.label :"パスワード(確認用)" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規会員登録",class: 'btn btn-sm btn-success' %>
  </div>
<% end %>

<h5>既に登録済みの方</h5>
  <p><%= render "public/shared/links" %>からログインしてください。</p>
