<h4>マイページ</h4>

<h4>登録所法</h4>
<%= link_to "編集する", edit_customer_path(@customer), class: "btn btn btn-success" %>
</div>

<table>
  <tr>
    <th>氏名</th>
    <td><%= @customer.last_name %><%= @customer.first_name %></td>
  <tr>
    <th>カナ</th>
    <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
  </tr>
  <tr>
    <th>郵便番号</th>
    <td><%= @customer.postcode %></td>
  </tr>
  <tr>
    <th>住所</th>
    <td><%= @customer.address %></td>
  </tr>
  <tr>
    <th>電話番号</th>
    <td><%= @customer.telephone_number %></td>
  </tr>
  <tr>
    <th>メールアドレス</th>
    <td><%= @customer.email %></td>
</table>

<div>
  <p>配送先</p>　　<%#= link_to "一覧を見る",addressのpath, class: 'btn btn-success' %>
</div>
