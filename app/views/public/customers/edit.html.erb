<h4>会員情報編集</h4>

<%= form_with url: customers_infomation_path, model: @customer, local:true do |f| %>

  <div class="form-group col-xs-5">
    <%= f.label :"氏名", class: "col-sm-2 control-label" %>
    <%= f.text_field :last_name  %>
    <%= f.text_field :first_name %>
  </div>

  <div class="form-group col-xs-5">
    <%= f.label :"フリガナ", class: "col-sm-2 control-label" %>
    <%= f.text_field :last_name_kana %>
    <%= f.text_field :first_name_kana %>
  </div>

  <div class="form-group col-xs-5">
    <%= f.label :"郵便番号" %>
    <%= f.text_field :postcode %>
  </div>

  <div class="form-group row">
    <%= f.label :"住所" %>
    <%= f.text_field :address %>
  </div>

  <div class="form-group col-xs-5">
    <%= f.label :"電話番号" %>
    <%= f.text_field :telephone_number %>
  </div>

  <div class="form-group row">
    <%= f.label :"メールアドレス" %>
    <%= f.text_field :email %>
  </div>


  <div class="actions">
    <%= f.submit "変更内容を保存",class: 'btn btn-sm btn-success' %>
  </div>

  <!--<div class="actions">-->
    <%#= f.submit "退会する", upadate_public_customer_path(customer), class: 'btn btn-sm btn-danger' %>
  <!--</div>-->
<% end %>
