<div class="container">
  <div class="row">
    <div class="pt-5 pl-5 ml-5 alart alert-secondar">
      <h4 class="alart alert-secondary">配送先編集</h4>
    </div>
  </div>
      <div>
        <%= render 'error', address: @address %>
      </div>
      <div class="row mt-5">
          <%= form_with model: @address, method: :patch do |f| %>

          <div class="row mb-3 justify-content-center">
            <%= f.label :"郵便番号(ハイフンなし)", class:"col-md-6" %>
            <%= f.text_field :postcode, class:"col-md-6" %>
          </div>
          <div class="row mb-3 justify-content-center">
            <%= f.label :"住所", class:"col-md-6" %>
            <%= f.text_field :address, class:"col-md-6" %>
          </div>
          <div class="row mb-3 justify-content-center">
            <%= f.label :"宛名", class:"col-md-6" %>
            <%= f.text_field :name, class:"col-md-6" %>
          </div>

          <div class="row pb-2 justify-content-end">
            <%= f.submit  "変更を保存",class: "btn btn-success" %>
          </div>
        <% end %>
      </div>
</div>

