<h2>配送先登録/一覧</h2>

<div>
  <%= render 'error', address: @address %>
</div>

<div>
   <%= form_with model: @address do |f| %>
    <h4>郵便番号(ハイフンなし)</h4>
      <%= f.text_field :postcode %>
    <h4>住所</h4>
      <%= f.text_field :address %>
    <h4>宛名</h4>
    　<%= f.text_field :name %>
    　<%= f.submit  "新規登録"%>
  <% end %>
</div>

<div>
  <table>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th></th>
    </tr>
    <!-- 2022.10.22  -->
    <!-- レイアウト部分は触ってません  -->
    <!--　りんたろう　-->
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.postcode %></td>
        <td><%= address.address %></td>
        <td><%= address.name %></td>
        <td>
          <%= link_to '編集する', edit_address_path(address.id) %>
          <%= link_to '削除する', adress_path(address.id),method: :delete %>
        </td>
      </tr>
    <% end %>
  </table>
</div>