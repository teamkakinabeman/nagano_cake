<div>
  <h2>注文履歴詳細</h2>

  <div>
    <strong>注文情報</strong>
    　<table>
    　  <thead>
        <tr>
          <th>注文日</th>
          <td><%= @order.created_at.to_date %></td>
        </tr>
        <tr>
          <th>配送先</th>
          <td>
              <%= @order.postcode %></br>
              <%= @order.address %></br>
              <%= @order.name %>
          </td>
        </tr>
        <tr>
          <th>支払方法</th>
           <td><%= @order.payment_method_i18n %></td>
        </tr>
        <tr>
          <th>ステータス</th>
           <td><%= @order.status_i18n %></td>
        </tr>
       </thead>
    　</table>
  </div>
  <div>
    <strong>請求内容</strong>
      <table>
        <tr>
          <th class=>商品合計</th>
           <% @total = @order.total_payment - @order.postage %>
           <td><%= @total.to_s(:delimited) %></td>
        </tr>
        <tr>
          <th>配送料</th>
          <td><%= @order.postage%></td>
        </tr>
        <tr>
          <th>ご請求額</th>
          <td><%= @order.total_payment.to_s(:delimited) %></td>
        </tr>
      </table>
  </div>
    <div>
      <strong>注文内容</strong>
        <table>
          <thead>
            <tr>
              <th>商品</th>
              <th>単価（税込）</th>
              <th>個数</th>
              <th>小計</th>
            </tr>
          </thead>
          <% @order.order_details.each do |order_detail| %>
          <tbody>
            <tr>
              <td><%= order_detail.item.name %></td>
              <td><%= order_detail.item.add_tax_price %></td>
              <td><%= order_detail.amount %></td>
              <td><%= (order_detail.amount  * order_detail.item.add_tax_price) %></td>
            </tr>
          </tbody>
          <% end %>
        </table>
    </div>
</div>