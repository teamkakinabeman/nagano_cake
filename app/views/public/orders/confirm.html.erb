<div>
  <h3>注文情報確認</h3>
  <table>
    <thead>
      <tr>
        <th>商品名</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>
      </tr>
    </thead>
    <% @cart_items.each do |cart| %>
      <tbody>
        <tr>
          <td><%= catt.item.name %></td>
          <td><%= (cart.item.price).to_s(:delimited) %></td>
          <td><%= cart.amount %></td>
          <td><%= (cart.item.price*cart.amount).to_s(:delimited) %></td>
        </tr>
      </tbody>
    <% end %>
  </table>
  <table>
    <thead>
      <tr>
        <th>送料</th>
        <td><% @postage %></td>
      </tr>
      <tr>
        <th>商品合計</th>
        <td><% @total_payment.round.to_s(:delimited) %></td>
      </tr>
      <tr>
        <th>請求金額</th>
        <td><%= @postage + @total_payment.to_s(:delimited) %></td>
      </tr>
    </thead>
  </table>
  <div>
    <h5><strong>支払方法</strong></h5>
      <%= @order.payment_method_i18n %>
  </div>
  <div>
    <h5><strong>お届け先</strong></h5>
    <%= '〒' + @order.postcode+ + @order.address %><br>
    <%= @order.name %>
  </div>

  <div><%= link_to "注文を確定する", orders_thanks_path, class: "btn btn-success" %></div>

</div>