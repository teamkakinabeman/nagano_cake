<div>
  <h3>注文情報確認</h3>
  <table class="table">
    <thead>
      <tr>
        <th>商品名</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>
      </tr>
    </thead>
    <% @cart_items.each do |cart| %>
      <tbody>
        <tr>
          <td><%= image_tag cart.item.item_image, size: "40x40" %><%= cart.item.name %></td>
          <td><%= (cart.item.add_tax_price).to_s(:delimited) %></td>
          <td><%= cart.amount %></td>
          <td><%= (cart.item.add_tax_price*cart.amount).to_s(:delimited) %></td>
        </tr>
      </tbody>
    <% end %>
  </table >
  <table class ="table">
    <thead>
      <tr>
        <th>送料</th>
        <td><%= @postage %></td>
      </tr>
      <tr>
        <th>商品合計</th>
        <td><%= @total.round.to_s(:delimited) %></td>
      </tr>
      <tr>
        <th>請求金額</th>
        <td><%= (@postage.to_i + @total.to_i).to_s(:delimited) %></td>
      </tr>
    </thead>
  </table>
  <div>
    <h5><strong>支払方法</strong></h5>
      <%= @order.payment_method_i18n %>
  </div>
  <div>
    <h5><strong>お届け先</strong></h5>
    <%= '〒' + @order.postcode+ + @order.address %><br>
    <%= @order.name %>
  </div>
  <div>
  <%= form_with model: @order, url: orders_path, method: :post, local: true do |f| %>
     <%= f.hidden_field :customer_id, :value => current_customer.id %>
     <%= f.hidden_field :postage, :value => @postage %>
     <%= f.hidden_field :total_payment, :value => @total + @postage %>
     <%= f.hidden_field :payment_method %>
     <%= f.hidden_field :name %>
     <%= f.hidden_field :address %>
     <%= f.hidden_field :postcode %>
     <%= f.hidden_field :status %>
    <%= f.submit "注文を確定する", class: "btn btn-success" %>
   <% end %>
 </div>

</div>