<div>
  <h3>注文履歴一覧</h3>

  <table>
    <thead>
     <tr>
       <th>注文日</th>
       <th>配送先</th>
       <th>注文商品</th>
       <th>支払金額</th>
       <th>ステータス</th>
       <th>注文詳細</th>
     </tr>
    </thead>
    <% @orders.each do |order| %>
      <tbody>
        <tr>
          <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
          <td>
            <%= '〒' + order.postcode %><br>
            <%= order.address %><br>
            <%= order.name %>
          </td>
          <td><%= order.order_details.item :name %></td>
          <td></td>
          <td></td>
          <td></td>
        </tr>
      </tbody>
    <% end %>
  </table>
</div>