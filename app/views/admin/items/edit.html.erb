      <%= form_with model: @item, url: admin_item_path(@item), method: :patch do |item| %>
        <table class="ml-4">
            <tr>
              <td>
                <%= item.label  "商品画像", style: "margin-right:70px;"%>
              </td>
              <td>
                 <%= item.file_field :item_image, accept: "image/*", class: "form-control-file" %>
              </td>
            </tr>
            <tr>
              <td>
                <%= item.label "商品名"%>
              </td>
              <td>
                 <%= item.text_field :name, class: "form-control"%>
              </td>
            </tr>
            <tr>
              <td valign="top">
                <%= item.label "商品説明 "%>
              </td>
              <td>
                <%= item.text_area :introduction, class: "form-control", :size=>"42x8" %>
              </td>
            </tr>
            <tr>
              <td>
                <%= item.label "ジャンル"%>
              </td>
              <td>
                <%= item.collection_select :genre_id, Genre.all, :id, :name ,:size=>"40", class: 'form-control'%>
              </td>
            </tr>
            <tr>
              <td>
                <%= item.label "税抜き価格"%>
              </td>
              <td>
                <%= item.text_field :unit_price, class: "form-control" %>
              </td>
              <td>円</td>
            </tr>
            <tr>
              <td>
                <%= item.label "販売ステータス"%>
              </td>
              <td align="center">
                <label><%= item.radio_button :is_on_sale, :on_sale, checked: true  %>販売中</label>
                <label><%= item.radio_button :is_on_sale, :sold_out %>販売停止中</label>
              </td>
            </tr>
            <tr>
              <td></td>
              <td align="center">
                <%= item.submit '変更を保存', class: "btn btn-success" %>
              </td>
            </tr>
          </table>
      <% end %>
      </div>
    </div>
  </div>
</div>