<div class='container'>
  <div class='row'>
    <div class='col-12'>
      <div class="d-flex bd-highlight mb-3 mt-3 ">
        <h5 class="p-2 bd-highlight"><span class="py-2 px-4 bg-ligh alert-secondary">商品一覧</span></h5>
　　　</div>
　　　<table class="table table-hover table-inverse" >
        <thead class="thead-light">
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </thead>
         <% @items.each do |item| %>
        <tbody>
          <td><%= item.id %></td>
          <td><%= link_to item.name,admin_item_path(item.id) ,class:"text-dark border-bottom border-dark"%></td>
          <td><%= converting_to_jpy(item.unit_price) %></td>
          <td><%= item.genre.name %></td>
          <!--<td>-->
            <%#= item.is_on_sale %>
            <% if item.is_on_sale == false %>
              <td class="text-black-50">販売停止中</td>
            <% else %>
            <td class="text-success">販売中</td>
            <% end %>
          <!--</td>-->
        </tbody>
        <% end %>
      </table>
      </div>
        <!--↓ページネーションの記載-->
        <%= paginate @items %>
    </div>
  </div>
</div>

