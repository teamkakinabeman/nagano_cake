<div class='container'>
  <div class='row col-12'>
      <div class="col-md-12 d-flex bd-highlight mt-3 ">
        <div class='col-md-11'>
          <h5 class="p-2 bd-highlight"><span class="py-2 px-4 bg-ligh alert-secondary">商品一覧</span></h5>
        </div>
        
        <%= link_to new_admin_item_path do %>
              <i class="fa fa-plus-circle fa-3x" style="color: #d3d3d3;"></i>
            <% end %>
　　    
　　　</div>
　</div>
　<div class='col-md-10 ml-5'>
　  
　  <table class="table table-hover table-inverse" >
      <thead class="thead-light">
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
        <th>ジャンル</th>
        <th>ステータス</th>
      </thead>
    <% @items.each do |item| %>
      <tbody>
          <td><%= item.id %></td>
          <td><%= link_to item.name,admin_item_path(item.id) ,class:"text-dark border-bottom border-dark"%></td>
          <td><%= converting_to_jpy(item.unit_price) %></td>
          <td><%= item.genre.name %></td>
          <% if item.is_on_sale? %>
            <td class="text-black-50">販売停止中</td>
          <% else %>
            <td class="text-success">販売中</td>
          <% end %>
        </tbody>
      <% end %>
      </table>
　</div>
  <div class="row justify-content-center mt-3">
    <div class='mr-5'>
       <!--↓ページネーションの記載-->
      <%= paginate @items %>
    </div>
  </div>
</div>

