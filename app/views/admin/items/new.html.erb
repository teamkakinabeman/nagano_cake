<div class='container'>
  <div class='row'>
    <div class='col-md-4'>
      <h1>商品投稿ページ</h1>

<!--　　　　　　　　　↓「admin_items_path」を記入しないとitem_pathを参照してしまうので記入　-->
  <%= form_with url: admin_items_path, model: @item, local: true do |form| %>


  <div class="form-group">
    <h6>商品名</h6>
    <%= form.text_field :name %>
  </div>

  <div class="form-group">
    <h6>商品説明文</h6>
    <%= form.text_area :introduction %>
  </div>

  <div class="form-group">
    <h6>税抜き価格</h6>
    <%= form.text_field :unit_price %>円
  </div>

  <div class="form-group">
    <%= form.submit '商品投稿' %>
  </div>


  <% end %>

    </div>
  </div>
</div>

