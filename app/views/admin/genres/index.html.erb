<div class='container'>
  <div class='row'>
    <div class='col-md-5'>

      <h1>ジャンル一覧・投稿</h1>

      <%= form_with url: admin_genres_path, model: @genre, local: true do |f| %>

      <div class="form-group">
        <%= f.label :name, 'ジャンル名' %>
        <%= f.text_field :name, class:'form-control' %>
      </div>

      <div class="form-group">
        <%= f.submit '追加', class: 'btn btn-primary btn-block' %>
      </div>

       <% end %>

      <table>
        <thead>
          <th>
            <h4>ジャンル</h4>
          </th>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td>・<%= genre.name %>
              <%= link_to edit_admin_genre_path(genre), class: "btn btn-outline-secondary btn-block" do %>
              編集
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>