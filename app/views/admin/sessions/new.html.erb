            <!--    <#%= f.check_box :remember_me %>-->
            <!--    <#%= f.label :remember_me %>-->
            <!--  </div>-->
            <!--<#% end %>-->
              <% end %>
           <%= render "admin/shared/links" %>
          </div>
      </div>
  </div>

