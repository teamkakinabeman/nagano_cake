
<div class='container'>
  <h5 class="col-7 my-5"><span class="alert-secondary">管理者ログイン</span></h5>
   <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="row">
          <div class="col-8 offset-2">
            <table width="800">
            <tr>
              <td width="20%">
                <%= f.label "メールアドレス"%>
              </td>
              <td>
                <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder: 'sample@example.com', :size=>"50" %>
              </td>
            </tr>
            <tr>
              <td>
                <%= f.label "パスワード" %>
              </td>
              <td>
                <%= f.password_field :password, autocomplete: "current-password",:size=>"50" %>
              </td>
            </tr>
            <tr>
              <td></td>
              <td>
                <%= f.submit "ログイン", class: "btn btn-primary", :size=>"50" %>
              </td>
            </tr>
          </table>
          　<!--ワイヤーフレームにないので下記削除-->
